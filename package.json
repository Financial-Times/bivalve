{
  "name": "Bivalve",
  "version": "0.0.0-development",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -x 'micro -p ${PORT:-3000}'",
    "test": "nyc --all -- mocha -r dotenv/config --ui exports test/**/*.js",
    "test-watch": "mocha -r dotenv/config --ui exports --watch test/**/*.js",
    "heroku-postbuild": "git-version-infer && package-version-github-release"
  },
  "author": "matthew.brennan@ft.com",
  "dependencies": {
    "@financial-times/n-es-client": "^1.5.1",
    "@quarterto/git-version-infer": "^5.1.0",
    "@quarterto/micro-cors": "^1.2.0",
    "@quarterto/package-version-github-release": "^1.2.0",
    "dotenv": "^4.0.0",
    "http-errors": "^1.6.2",
    "lodash.pick": "^4.4.0",
    "lodash.pickby": "^4.6.0",
    "micro": "^9.0.2"
  },
  "devDependencies": {
    "@quarterto/promisify": "^1.0.0",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nock": "^9.1.4",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "sinon": "^4.1.2"
  },
  "engines": {
    "node": "^8.5.0"
  },
  "nyc": {
    "exclude": [
      "index.js",
      "controllers/index.js",
      "test/*"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Financial-Times/bivalve.git"
  },
  "bugs": {
    "url": "https://github.com/Financial-Times/bivalve/issues"
  },
  "homepage": "https://github.com/Financial-Times/bivalve#readme",
  "private": true
}
